<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.ReportController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <Label text="Report Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <!-- Date Picker to filter reports by date -->
            <Label text="Select Date:"/>
            <DatePicker fx:id="reportDatePicker"/>

            <!-- TableView to display reports -->
            <TableView fx:id="reportTableView" prefHeight="250.0" prefWidth="580.0">
                <columns>
                    <TableColumn fx:id="reportDateColumn" text="Date" prefWidth="150.0"/>
                    <TableColumn fx:id="totalRevenueColumn" text="Total Revenue" prefWidth="150.0"/>
                    <TableColumn fx:id="mostPopularItemColumn" text="Most Popular Item" prefWidth="150.0"/>
                </columns>
            </TableView>

            <!-- Buttons for generating/exporting reports -->
            <Button text="Generate Report" onMouseClicked="#handleGenerateReport"/>
            <Button text="Export Report" onMouseClicked="#handleExportReport"/>
        </VBox>
    </children>
</AnchorPane>
